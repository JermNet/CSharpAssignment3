<Window x:Class="Assignment3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment3"
        mc:Ignorable="d"
        Title="MainWindow" Height="1050" Width="1250">
    <Grid x:Name="myGrid">
        <Canvas x:Name="myCanvas" HorizontalAlignment="Left" Height="1000" Margin="240,24,0,0" VerticalAlignment="Top" Width="1000"/>

        <Border BorderBrush="#FF179AC8" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="97" Margin="13,18,0,0"/>
        <ComboBox x:Name="Combo" HorizontalAlignment="Left" Margin="50,30,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="Combo_Changed">
            <ComboBoxItem Content="Hair 1"/>
            <ComboBoxItem Content="Hair 2"/>
            <ComboBoxItem Content="Hair 3"/>
            <ComboBoxItem Content="Hair 4"/>
        </ComboBox>

        <Border BorderBrush="#FF94778B" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="99" Margin="13,126,0,0"/>
        <CheckBox x:Name="Eyes_1" Content="Eyes 1" HorizontalAlignment="Left" Margin="34,140,0,0" VerticalAlignment="Top" Width="61" Checked="Eyes_1_Click"/>
        <CheckBox x:Name="Eyes_2" Content="Eyes 2" HorizontalAlignment="Left" Margin="122,140,0,0" VerticalAlignment="Top" Width="61" Checked="Eyes_2_Click"/>
        <CheckBox x:Name="Eyes_3" Content="Eyes 3" HorizontalAlignment="Left" Margin="34,185,0,0" VerticalAlignment="Top" Width="61" Checked="Eyes_3_Click"/>
        <CheckBox x:Name="Eyes_4" Content="Eyes 4" HorizontalAlignment="Left" Margin="122,185,0,0" VerticalAlignment="Top" Width="61" Checked="Eyes_4_Click"/>

        <Border BorderBrush="#FFDD614A" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="98" Margin="13,237,0,0"/>
        <RadioButton x:Name="Nose_1" Content="Nose 1" HorizontalAlignment="Left" Margin="24,256,0,0" VerticalAlignment="Top" Width="54" Checked="Nose_1_Click"/>
        <RadioButton x:Name="Nose_2" Content="Nose 2" HorizontalAlignment="Left" Margin="24,294,0,0" VerticalAlignment="Top" Width="60" Checked="Nose_2_Click"/>
        <RadioButton x:Name="Nose_3" Content="Nose 3" HorizontalAlignment="Left" Margin="122,256,0,0" VerticalAlignment="Top" Width="60" Checked="Nose_3_Click"/>
        <RadioButton x:Name="Nose_4" Content="Nose 4" HorizontalAlignment="Left" Margin="122,294,0,0" VerticalAlignment="Top" Width="60" Checked="Nose_4_Click"/>

        <Border BorderBrush="#FF2BC016" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="98" Margin="13,348,0,0"/>
        <Label Content="1" Margin="35,366,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="19"/>
        <Label Content="4" Margin="160,366,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="20"/>
        <Slider x:Name="Slider" HorizontalAlignment="Left" Margin="34,397,0,0" VerticalAlignment="Top" Width="146" ValueChanged="Value_Changed" SelectionEnd="100" SelectionStart="1" IsSelectionRangeEnabled="True" TickPlacement="BottomRight" Value="1" Minimum="1" Maximum="4"/>

        <Border BorderBrush="#FF1B4353" BorderThickness="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="194" Height="57" Margin="13,460,0,0"/>
        <Button x:Name="Random" Content="It's Random, Baby!" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="157" Click="Random_Click" Margin="34,479,0,0"/>
    </Grid>
</Window>
